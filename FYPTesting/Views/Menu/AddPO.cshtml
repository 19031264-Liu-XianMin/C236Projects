    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="OrderDate">Order Date :</label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSDateA" data-target-input="nearest">
                <input type="text" asp-for="OrderDate" class="form-control" />
                <div class="input-group-append" data-target="#JSDateA" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fas fa-calendar"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="DueDate">Due Date :</label>
        <div class="col-sm-5">
            <div class="input-group date" id="JSDateB" data-target-input="nearest">
                <input type="text" asp-for="DueDate" class="form-control" />
                <div class="input-group-append" data-target="#JSDateB" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fas fa-calendar"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="PONo">PO No. :</label>
        <div class="col-sm-5">
            <input asp-for="PONo" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="PONo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="PRNo">PR No. :</label>
        <div class="col-sm-5">
            <input asp-for="PRNo" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="PRNo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="PartNo">Part No. :</label>
        <div class="col-sm-3">
            <input asp-for="PartNo" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="PartNo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Currency">Currency :</label>
        <div class="col-sm-4">
            <select asp-for="Currency" class="form-control">
                <option value="">-- Select Currency --</option>
                <option value="admin">SGD</option>
                <option value="supplier">USD</option>
            </select>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Quantity">Quantity :</label>
        <div class="col-sm-3">
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="OrigAmt">Orig. Amt. :</label>
        <div class="col-sm-3">
            <input asp-for="OrigAmt" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="OrigAmt" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Description">Description :</label>
        <div class="col-sm-3">
            <textarea asp-for="Description" cols="35" rows="4" class="form-control"></textarea>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    ViewData["Message"]
                </div>
            </div>
        </div>
    }
</form>
