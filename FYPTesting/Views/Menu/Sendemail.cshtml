@model Menu;

@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>

    <script language="javascript">
        $(document).ready(function () {
            $('#JSDate')
                .datetimepicker({ format: 'DD-MM-YYYY' });
        });
    </script>
}

<form asp-controller="Menu"
      asp-action="SendEmail"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-4">
            <h2>PO Email</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" for="CustName">Customer :</label>
        <div class="col-sm-4">
            <input type="text" name="CustName" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" for="Email">Email :</label>
        <div class="col-sm-4">
            <input type="text" name="Email" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" for="Subject">Subject :</label>
        <div class="col-sm-4">
            <input type="text" name="Subject" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" for="Message">Message :</label>
        <div class="col-sm-5">
            <textarea name="Message" rows="8" cols="20" class="form-control"></textarea>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Send" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    <text>@ViewData["Message"]</text>
                </div>
            </div>
        </div>
    }

</form>