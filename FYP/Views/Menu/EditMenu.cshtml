@{
   Layout = "_Layout";
}

@model Menu;

<form asp-controller="Demo"
      asp-action="EditCadet"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>Edit Cadet</h2>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="ReviseDueDate">Revise Due Date :</label>
        <div class="col-sm-3">
            <div class="input-group date" id="JSReleaseDT" data-target-input="nearest">
                <input type="text" class="form-control"
                       asp-for="ReviseDueDate" asp-format="{0:yyy-MM-dd}" />

                <div class="input-group-append" data-target="#JSReleaseDT" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="ReviseDueDate" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Quantity">Quantity :</label>
        <div class="col-sm-3">
            <input asp-for="Quantity" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    ViewData["Message"]
                </div>
            </div>
        </div>
    }



</form>
