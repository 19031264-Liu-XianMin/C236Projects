@model SA14.Models.Stock;

@section MoreScripts {
    <script src="~/lib/moment/moment.min.js"></script>
    <link href="~/lib/dtpicker/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />
    <script src="~/lib/dtpicker/js/tempusdominus-bootstrap-4.min.js"></script>

    <script language="javascript">
        $(document).ready(function () {
            $('#Launched')
                .datetimepicker({
                    format: 'YYYY-MM-DD HH:mm',
                    sideBySide: true
                });
        });
    </script>
}

<form asp-controller="Stock" asp-action="Update"
      method="post">

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6 ">
            <h2>Update Stock Record</h2>
        </div>
    </div>

    <input type="text" asp-for="StockNo" hidden />

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="ItemDesc">Item :</label>
        <div class="col-sm-5">
            <input type="text" asp-for="ItemDesc" class="form-control" />
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="ItemDesc" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CatID">Category :</label>
        <div class="col-sm-5">
            <select asp-for="CatID" class="form-control" asp-items="@((SelectList)ViewData["cList"])">
            </select>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="CatID" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="QtyAvailable">Available Qty :</label>
        <div class="col-sm-5">
            <input type="text" asp-for="QtyAvailable" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="ReOrderQty">Re-order Qty :</label>
        <div class="col-sm-5">
            <input type="text" asp-for="ReOrderQty" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="SellPrice">Selling Price :</label>
        <div class="col-sm-5">
            <input type="text" asp-for="SellPrice" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="CostPrice">Cost Price :</label>
        <div class="col-sm-5">
            <input type="text" asp-for="CostPrice" class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <label class="control-label col-sm-2" asp-for="Launched">Launched Date :</label>
        <div class="col-sm-5">
            <div class="input-group date" id="Launched" data-target-input="nearest">
                <input type="text" asp-for="Launched" class="form-control" asp-format="{0:yyyy-MM-dd}" />
                <div class="input-group-append" data-target="#Launched" data-toggle="datetimepicker">
                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
            <span asp-validation-for="Launched" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="offset-sm-2 col-sm-6">
            <input type="submit" value="Update" class="btn btn-primary" />
        </div>
    </div>

    @if (ViewData["Message"] != null)
    {
        <div class="form-group row">
            <div class="offset-sm-2 col-sm-6">
                <div class="alert alert-@ViewData["MsgType"]">
                    @ViewData["Message"]
                </div>
            </div>
        </div>
    }

</form>